package ex02_loop;

public class Ex01_for {

	public static void main(String[] args) {
		// for 문
		// 연속된 숫자를 생성할 때 주로 사용한다
		// 배열과 함께 자주 사용된다
		// for(초기문; 조건문; 증감문){
		// 		실행문
		// }

		// 1~10
		for(int n = 1; n <= 10; n++) {
			System.out.print(n); //횡입력;
		}
		System.out.println();//줄바꿈
		//초기문 ->조건문->실행문->증감문->조건문->실행문 ...반복
	
		//연습
		//10~1
		for(int i = 10; i>1||i<= 10; --i) {
			System.out.print(i);
		}
		
		//연습
		//구구단 7단 출력
	
	
	}

}
